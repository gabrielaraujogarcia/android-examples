<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.minitagbrasil.exampleslayoutapi">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ExampleLinearLayoutAPI"/>
        <activity android:name=".ExampleScrollView"/>
        <activity android:name=".ExampleGridView"/>
        <activity android:name=".ExampleGallery"/>
        <activity android:name=".ExampleImageSwitcher"/>
        <activity android:name=".ExampleWebView"/>
        <activity android:name=".ExampleTabHost"/>
        <activity android:name=".tabs.TabOne"/>
        <activity android:name=".ExampleViewPager"/>


    </application>

</manifest>

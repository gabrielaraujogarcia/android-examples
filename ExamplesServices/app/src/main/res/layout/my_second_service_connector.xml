<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Example of binding and unbinding a service"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="15dp"
        android:padding="10dp"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnStartBinding"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Start MySecondService"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp" />

    <Button
        android:id="@+id/btnShowCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show the value of count"
        android:layout_alignTop="@+id/btnStartBinding"
        android:layout_toRightOf="@+id/btnStartBinding"
        android:layout_toLeftOf="@+id/btnStopBinding"
        android:layout_toStartOf="@+id/btnStopBinding"
        android:layout_alignBottom="@+id/btnStartBinding" />

    <Button
        android:id="@+id/btnStopBinding"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:text="Stop MySecondService"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/btnStartBinding"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>